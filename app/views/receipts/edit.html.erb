<h1>Editing receipt</h1>

<% form_for(@receipt) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :kind %><br />
    <%= f.text_field :kind %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :value_cents %><br />
    <%= f.text_field :value_cents %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @receipt %> |
<%= link_to 'Back', receipts_path %>