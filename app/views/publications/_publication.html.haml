- content_for :head do
  = stylesheet_link_tag "jquery/ui.theme", "jquery/jquery.wysiwyg"
  = javascript_include_tag "app/rich", "jquery/ui.datepicker", "jquery/jquery.wysiwyg"

- semantic_form_for(@publication, :html => { :class => "form" }) do |f|
  .columns
    .column.left
      = f.input :title, :input_html => { :size => 50 }
      = f.input :wrote_at, :as => :string, :input_html => { :id => "calendar" }
      = f.input :body, :input_html => { :size => "60x20" }
      = f.input :published_at, :as => :string, :input_html => { :id => "calendar" }
      = f.input :published
    .column.right
      = f.input :kind, :as => :select, :collection => Publication.get_kind_values
    .clear
  .group.navform
    = f.submit 'Salvar', :class => :button
    ou
    = link_to 'Cancelar', publications_path

