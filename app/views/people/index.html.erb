<div class="block">
  <div class="content">
    <h2 class="title">Municipes</h2>
    <div class="inner">
      <table class="table">

        <tr>
          <th>Nome</th>
          <th>Sexo</th>
          <th>Civil</th>
          <th>Nasc</th>
          <th>Local</th>
        </tr>

        <% @people.each do |person| %>
          <tr>
            <td><%= link_to person.name, person %></td>
            <td><%=h person.sex %></td>
            <td><%=h person.marital %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<br />

<% content_for :sidebar do %>
<div class="block">
  <h3>Menu</h3>
  <ul class="navigation">
    <li><%= link_to image_tag('../images/icons/add.png', :class=>'img')+' Novo Registro', new_person_path %></li>
  </ul>
</div>
<% end %>
