%h1
  Listing animals
%table
  %tr
    %th
      Name
    %th
      Born at
    %th
      Age
    %th
      Sex
    %th
      Kind
    %th
      Fur
    %th
      Race
  - @animals.each do |animal|
    %tr
      %td
        = h animal.name
      %td
        = h animal.born_at
      %td
        = h animal.age
      %td
        = h animal.sex
      %td
        = h animal.kind
      %td
        = h animal.fur
      %td
        = h animal.race
      %td
        = link_to 'Show', animal
      %td
        = link_to 'Edit', edit_animal_path(animal)
      %td
        = link_to 'Destroy', animal, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New animal', new_animal_path
