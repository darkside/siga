- form_for(@service) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :kind
    %br
    = f.text_field :kind
  %p
    = f.label :value_cents
    %br
    = f.text_field :value_cents
  %p
    = f.label :start_at
    %br
    = f.datetime_select :start_at
  %p
    = f.label :end_at
    %br
    = f.datetime_select :end_at
  %p
    = f.label :done
    %br
    = f.check_box :done
  %p
    = f.submit 'Update'

= link_to 'Show', @service
|
= link_to 'Back', services_path
